<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:id="@+id/map"
             android:layout_height="match_parent"
             tools:context=".MapFragment">

    <Spinner
            android:layout_width="match_parent"
            android:elevation="1dp"
            android:layout_height="wrap_content" android:id="@+id/spinner" android:layout_marginTop="0dp"
            android:gravity="top" android:background="@android:drawable/screen_background_light"
            android:layout_gravity="top" android:layout_marginBottom="0dp" android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:src="@drawable/ic_clear_black_24dp"
            android:id="@+id/fab" android:layout_gravity="bottom|end" android:layout_marginEnd="16dp"
            android:layout_marginBottom="100dp" android:visibility="invisible"/>
</FrameLayout>
