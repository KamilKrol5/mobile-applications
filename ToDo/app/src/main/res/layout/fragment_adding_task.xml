<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".AddingTask" android:layout_gravity="top"
>
    <RadioGroup
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/colorsGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <ImageView
                android:src="@color/color1"
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/imageView14" android:layout_weight="1"
                android:padding="6dp" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
        <ImageView
                android:src="@color/color2"
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/imageView9" android:layout_weight="1"
                android:padding="6dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"/>
        <ImageView
                android:src="@color/color3"
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/imageView10" android:layout_weight="1"
                android:padding="6dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"/>
        <ImageView
                android:src="@color/color4"
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/imageView13" android:layout_weight="1"
                android:padding="6dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"/>
        <ImageView
                android:src="@color/color5"
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/imageView15" android:layout_weight="1"
                android:padding="6dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"/>
    </RadioGroup>
    <EditText
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:inputType="textCapWords|textMultiLine"
            android:text=""
            android:scrollbars="vertical"
            android:maxLines="5"
            android:ems="10"
            android:id="@+id/editText"
            android:textAlignment="textStart"
            android:textSize="24sp" android:background="@color/textViewColor"
            android:padding="10dp"
            android:gravity="top" android:scrollHorizontally="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colorsGroup"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup1" android:layout_marginBottom="70dp"/>
    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:inputType="textMultiLine|text"
            android:ems="4"
            android:id="@+id/timeText"
            android:textSize="18sp"
            android:gravity="center"
            android:text="00:xD" android:background="@color/textViewColor"
            android:paddingTop="5dp" android:paddingBottom="5dp"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/clockIcon"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup1" android:layout_marginBottom="8dp"/>
    <ImageView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:src="@drawable/clock18dp"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/clockIcon"
            android:background="@color/textViewColor"
            app:layout_constraintStart_toEndOf="@+id/dateText"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/timeText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/radioGroup1"/>
    <ImageView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:src="@drawable/calendar18dp"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/calendarIcon"
            android:background="@color/textViewColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/dateText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/radioGroup1"/>
    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="141dp"
            android:layout_height="34dp"
            android:inputType="textMultiLine|text"
            android:ems="4"
            android:id="@+id/dateText"
            android:textSize="18sp"
            android:gravity="center"
            android:text="12:15:2054" android:background="@color/textViewColor"
            android:paddingTop="5dp" android:paddingBottom="5dp"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/calendarIcon"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/clockIcon"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup1" android:layout_marginBottom="8dp"/>
    <RadioGroup
            app:layout_constraintVertical_chainStyle="packed"
            android:orientation="horizontal"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
            android:layout_marginBottom="4dp">
        <ImageView
                android:src="@drawable/ic_home_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView" android:layout_weight="1"
                android:tag="1" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
                android:background="@color/homeColor"/>
        <ImageView
                android:src="@drawable/ic_fitness_center_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView2" android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:tag="2" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
        />
        <ImageView
                android:tag="3"
                android:src="@drawable/ic_local_grocery_store_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView3" android:layout_weight="1"
                android:background="@android:color/holo_blue_light" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" android:padding="6dp"
        />
        <ImageView
                android:tag="4"
                android:src="@drawable/ic_work_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView5" android:layout_weight="1"
                android:background="@android:color/holo_purple" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
        />
        <ImageView
                android:tag="5"
                android:src="@drawable/ic_restaurant_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView11" android:layout_weight="1"
                android:background="@android:color/holo_orange_dark" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
        />
    </RadioGroup>
    <RadioGroup
            app:layout_constraintVertical_chainStyle="packed"
            android:orientation="horizontal"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/radioGroup1"
            app:layout_constraintBottom_toTopOf="@+id/addTaskButton" android:layout_marginBottom="4dp">
        <ImageView
                android:tag="6" android:padding="6dp"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView8" android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:layout_marginRight="2dp" android:layout_marginLeft="2dp"
        />
        <ImageView
                android:tag="8"
                android:src="@drawable/ic_school_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView6" android:layout_weight="1"
                android:background="@android:color/holo_blue_dark" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
        />
        <ImageView
                android:tag="7"
                android:src="@drawable/ic_favorite_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView7" android:layout_weight="1"
                android:background="@android:color/holo_red_light" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
        />
        <ImageView
                android:tag="8"
                android:src="@drawable/ic_pets_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView4" android:layout_weight="1"
                android:background="@android:color/holo_red_dark" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
        />
        <ImageView
                android:tag="9"
                android:src="@drawable/ic_local_florist_black_24dp" android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView12" android:layout_weight="1"
                android:background="@android:color/holo_green_dark" android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
        />
    </RadioGroup>
    <Button
            app:layout_constraintVertical_chainStyle="packed"
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addTaskButton"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
            android:layout_marginTop="60dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priorityTextView"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <SeekBar
            android:layout_width="163dp"
            android:layout_height="18dp"
            android:id="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/priorityTextView"
            app:layout_constraintBottom_toTopOf="@+id/addTaskButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"/>

</android.support.constraint.ConstraintLayout>